{
  "name": "noah-box-frontend",
  "description": "Noah Box 前端静态页面部署配置",
  "build": {
    "command": "npm run build:all",
    "outputDirectory": "public",
    "environment": {
      "NODE_VERSION": "18"
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/downloads",
      "dest": "/downloads.html"
    },
    {
      "src": "/admin",
      "dest": "/admin.html"
    },
    {
      "src": "/login",
      "dest": "/login.html"
    },
    {
      "src": "/change-password",
      "dest": "/change-password.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}